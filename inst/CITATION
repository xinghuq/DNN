citHeader("To cite package DNNcpp in publications use:")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
vers <- paste("R package version", meta$Version)

citEntry(entry = "Manual",
         title = "A Fast Neural Network Tool for Big Data Analysis",
         author = as.person("Xinghu Qin"),
         year = year,
         note = vers,

         textVersion =
         paste0("Qin X., (", year, "),
                \"A Fast Neural Network Tool for Big Data Analysis\", ", vers, "."))

